<div class="row">
    <div class="col shadow-lg p-3 mb-5 bg-body rounded">
    <h3 class="textColor">مقالاتي</h3>
    <hr />
    {% if current_user.articales %}
    <div class="table-responsive">
        <table class="table text-center">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">الإجراء</th>
            <th scope="col">المقالات</th>
            <th scope="col">تاريخ النشر</th>
            <th scope="col">الإعجابات</th>
            </tr>
        </thead>
        <tbody>
    {% for article in current_user.articales %}
    <tr class="align-middle">
            <td>{{loop.index + pagination.skip}}</td>
            <td>
                <div class="d-flex justify-content-center">
                <div class="btn-group">
                    <div>
                    <a href="{{url_for('article_controller.article_update', id=article.id)}}" class="btn btn-sm mainButtonWhite" role="button">تعديل</a>
                    </div>
                    <div>
                    <a href="{{url_for('article_controller.article_delete', id=article.id)}}" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#articleModal" role="button">حذف</a>
                    <!-- Modal -->
                    <div class="modal fade" id="articleModal" tabindex="-1" aria-labelledby="articleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                        <div class="modal-content ss">
                            <div class="modal-header">
                            <h5 class="modal-title" id="articleModalLabel">حذف المقالة</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body overflow-auto"></div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-sm btn-secondary" data-bs-dismiss="modal">اغلاق</button>
                            <a href="{{url_for('article_controller.article_delete', id=article.id)}}" class="btn btn-sm btn-danger" id="delBtn" role="button">حذف</a>
                            </div>
                        </div>
                        </div>
                    </div>
                    {# {{ modal(article.id) }} #}

                    </div>
                </div>
                </div>
            </td>
            <td>
                <a href="{{url_for('article_controller.article_show', id=article.id)}}" class="text-decoration-none link-secondary fs-6 text-start text-break">{{article.title}}</a>
            </td>
            <td>{{article.created_date.date()}}</td>
            <td>{{article.Like | length}}</td>
            </tr>
    {% endfor %}
            
        </tbody>
        </table>
    </div>
    {% else %}
        <p>لم تكتب أي مقال حتى الآن.</p>

    {% endif %}
    </div>
</div>