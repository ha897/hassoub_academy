{% extends "base.jinja" %}

{% block base %}
<div class="container">
    <h1>Your Image :</h1>
    <div class="row mt-2">
        <div class="col-md-7">

            <img class="img-fluid" src="https://for-images-python.s3.ap-southeast-2.amazonaws.com/uploads/{{image_name}}">
        </div>
        {# blur #}
        {# ###################################################################### #}
        <div class="col-md-5">
            <div class="card" style="width:30rem;">
                <div class="card-body">
                    <h2 class="card-title" >blur :</h2>
                    <form action="/blur" method="post">

                    
                        <input type="hidden" name="filename" value="{{image_name}}">

                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">radius :</span>
                            <input type="number" class="form-control" name="radius">
                            
                        </div>

            
                        <button type="submit" class="btn btn-primary">create</button>
                    </form>

                </div>
                
            </div>
            {# contrast #}
            {# ###################################################################### #}
            <div class="card" style="width:30rem;  margin:20px 0px;">
                <div class="card-body">
                    <h2 class="card-title" >contrast:</h2>

                        <form action="/contrast" method="post">
                        
                            <input type="hidden" name="filename" value="{{image_name}}">
                            <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">factor :</span>
                            <input type="number" step="0.01" class="form-control" name="factor">
                        </div>

                        
                            <button type="submit" class="btn btn-primary">create</button>
                        </form>
                </div>
            </div>



            {# brightness #}
            {# ###################################################################### #}
            <div class="card" style="width:30rem;  margin:20px 0px;">
                <div class="card-body">
                    <h2 class="card-title" >brightness :</h2>

                        <form action="/brightness" method="post">

                            <input type="hidden" name="filename" value="{{image_name}}">
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1">factor :</span>
                                <input type="number" step="0.01" class="form-control" name="factor">
                            </div>
                            <button type="submit" class="btn btn-primary">create</button>
                        </form>
                </div>
            </div>
            {# android images #}
            {# ###################################################################### #}
            <form action="/android" method="post">
                <input type="hidden" name="filename" value="{{image_name}}">
                <button style="width: 109%; margin:10px 0px;" class="btn btn-outline-primary">cratate android images</button>
            </form>
            {# change dimensions page #}
            <a style="width: 109%;" href="{{url_for('image', image_name=image_name)}}" class="btn btn-primary">change dimensions</a>
        </div>

        
    </div>
</div>

{% endblock base %}